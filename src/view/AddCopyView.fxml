		</GridPane>
		<Button fx:id="btnAdd" layoutX="221.0" layoutY="325.0"
			mnemonicParsing="false" onAction="#goActionAdd" prefHeight="25.0"
			prefWidth="139.0" text="Add New Book Copy"
			AnchorPane.bottomAnchor="20.0" />
		<Button fx:id="btnCancel" layoutX="375.0" layoutY="325.0"
			mnemonicParsing="false" onAction="#goActionCancel" prefWidth="100.0"
			text="Cancel" AnchorPane.bottomAnchor="20.0" />
