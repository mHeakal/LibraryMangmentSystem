	prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.65"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="control.AddCopyViewController">
	<children>
		<Label layoutX="30.0" layoutY="30.0" text="Add new book copy"
			AnchorPane.leftAnchor="25.0" AnchorPane.topAnchor="20.0">
			<font>
				<Font name="Arial Bold" size="24.0" />
			</font>
		</Label>
		<GridPane layoutX="31.0" layoutY="52.0"
			AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0"
			AnchorPane.topAnchor="60.0">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES"
					maxWidth="150.0" minWidth="10.0" prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES"
					minWidth="10.0" prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label text="ISBN (*)" />
				<Label text="Copy number(*)" GridPane.rowIndex="2" />
				<TextField fx:id="txtISBN" GridPane.columnIndex="1" />
				<TextField fx:id="txtCopyNumber" GridPane.columnIndex="1"
					GridPane.rowIndex="2" />
				<Label fx:id="lblISBNError" GridPane.columnIndex="1"
					GridPane.rowIndex="1" />
				<Label fx:id="lblCopyNumberError" textFill="#f81501"
					GridPane.columnIndex="1" GridPane.rowIndex="3" />

